{
  "configuration": {
    "name": "bdd-tests",
    "packages": "bdd.examples",
    "appenders": {
      "Console": {
        "name": "STDOUT",
        "PatternLayout": {
          "pattern": "%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"
        }
      },
      "RollingFile": {
        "name": "File",
        "fileName": "logs/automation.log",
        "filePattern": "logs/automation-backup-%d{MM-dd-yy-HH-mm-ss}-%i.log.gz",
        "PatternLayout": {
          "pattern": "%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "10 MB"
          }
        },
        "DefaultRolloverStrategy": {
          "max": "10"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "all",
        "AppenderRef": [
          {
            "ref": "STDOUT"
          },
          {
            "ref": "File"
          }
        ]
      }
    }
  }
}
